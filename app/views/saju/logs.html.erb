<h1>📜 사주풀이 기록장</h1>

<% @logs.each do |log| %>
  <div style="border: 1px solid #ddd; padding: 15px; margin-bottom: 10px; border-radius: 8px;">
    <h3><%= log.name %>님의 운세</h3>
    
    <!-- [추가] 사진이 있으면 보여주기 -->
    <% if log.image.attached? %>
      <div style="margin-bottom: 10px;">
        <!-- image_tag는 Active Storage가 알아서 이미지 주소를 만들어줍니다 -->
        <%= image_tag log.image, style: "max-width: 200px; border-radius: 5px;" %>
      </div>
    <% end %>

    <p><%= log.content.truncate(100) %></p>
    <p style="color: blue; font-size: 0.8em;">
      <% if log.embedding.present? %>
        ✅ 벡터 생성됨
      <% else %>
        ❌ 벡터 없음
      <% end %>
    </p>
  </div>
<% end %>